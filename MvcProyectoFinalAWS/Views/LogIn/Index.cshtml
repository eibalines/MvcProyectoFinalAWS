@section Scripts
{
    <script src="~/js/jquery-3.6.0.min.js"></script>
    <script src="~/js/popper-1.14.1.js"></script>
    <script src="~/js/bootstrap.bundle.min.js"></script>
}



<link href="~/css/bootstrap-grid.min.css" rel="stylesheet" />
<link href="~/css/bootstrap.css" rel="stylesheet" />
<link href="~/css/bootstrap-reboot.css" rel="stylesheet" />
<link href="~/css/bootstrap-utilities.css" rel="stylesheet" />
<link href="~/css/LoginStyle.css" rel="stylesheet" />

<section class="vh-100">
    <div class="container-fluid h-custom">
        <div class="row d-flex align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">

            </div>
            <br />
            <div class="col-md-8 col-lg-6 col-xl-4 offset-xl-1">
                <h1>@ViewData["MENSAJEACCESODENEGADO"]</h1>
                <br />
                <form method="post">
                    <div class="d-flex flex-row align-items-center justify-content-center justify-content-lg-start">
                        <label class="form-label">LogIn </label>

                    </div>

                   
                    <!-- Email input -->
                    <div class="form-outline mb-4">
                        <input type="text" id="form3Example3" class="form-control form-control-lg"
                               placeholder="Mail" name="mail" required />
                        
                    </div>

                    <!-- Password input -->
                    <div class="form-outline mb-3">
                        <input type="password" id="form3Example4" class="form-control form-control-lg"
                               placeholder="Password" name="password" />
                        
                    </div>

                    <div class="d-flex justify-content-between align-items-center">

                        <a asp-controller="Login"
                           asp-action="RecuperarPass" class="text-body">¿Olvidaste tu contraseña?</a>
                    </div>

                    <div class="text-center text-lg-start mt-4 pt-2">
                        <button type="submit" class="btn btn-primary btn-lg"
                                style="padding-left: 2.5rem; padding-right: 2.5rem;">
                            Login
                        </button>
                        <p class=" sm fw-bold mt-2 pt-1 mb-0">
                            ¿Aún no tienes cuenta?
                            <a asp-controller="Login"
                               asp-action="Register"
                               class="link-danger">¡Registrate gratis!</a>
                        </p>
                    </div>

                </form>
            </div>
        </div>
    </div>
</section>