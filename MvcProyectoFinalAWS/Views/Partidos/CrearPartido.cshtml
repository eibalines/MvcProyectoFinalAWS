@model NugetPadelAWS_DSC.CampoPadel
@{
    int idusuario = int.Parse(Context.User.FindFirst("idusuario").Value);
}
@if (Model != null)
{
    <section class="vh-100">
        <br /><br />
        <form method="post">
            <div class="container rounded bg-white mt-5 mb-5">
                <a asp-controller="Home" asp-action="Index" class="btn btn-outline-dark">Volver al inicio</a>
                <div class="row">

                    <div class="col-md-5 border-right">
                        <div class="p-3 py-5">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h4 class="text-right">@Model.NombreCampo</h4>
                                <input type="hidden" name="idpista" value="@Model.IdCampo" />
                                <input type="hidden" name="nombrecampo" value="@Model.NombreCampo" />

                            </div>
                            <div class="row mt-2">
                                <label>Dia</label>
                                <input class="form-control-lg" type="date" name="fecha" /><br />
                                <br />
                                <label>Hora Inicio</label>
                                <select name="horainicio">
                                    @for (int i = 9; i <= 14; i++)
                                    {
                                        int a = i + 1;
                                        <option value="@i">@i:00</option>
                                    }
                                </select>
                                <br />
                                <label>Hora Final</label>
                                <select name="horafinal">
                                    @for (int i = 9; i <= 14; i++)
                                    {
                                        int a = i + 1;
                                        <option value="@i">@i:00</option>
                                    }
                                </select>
                            </div>
                            <br />
                            <div class="row mt-3">
                                <label>Pista</label><br />
                                <select name="idcampo">
                                    @for (int i = 1; i <= Model.NumPistas; i++)
                                    {
                                        <option value="@i">Pista @i</option>
                                    }
                                </select>

                            </div>

                            <div class="row mt-3">
                                <label>Precio</label>
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="precio" id="precio" value=10>
                                    <label class="form-check-label">
                                        10 euros(Pista de CRISTAL)

                                    </label>
                                </div>
                            </div>
                            <div class="row mt-3">
                                <div class="form-check">
                                    <input class="form-check-input" type="radio" name="precio" id="precio" value=5 />
                                    <label class="form-check-label">
                                        5 euros (Pista de MURO)
                                    </label>
                                </div>

                            </div>
                            <br /><br />
                            <button type="submit" class="btn btn-primary">Reservar</button>
                        </div>
                    </div>

                    <div class="col-md-4">
                        <img img src="@Model.Imagen" style="width:750px; height: 575px; ">
                    </div>
                </div>
            </div>
        </form>
    </section>






}

